extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Create Client
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='name') Name
      .col-md-7
        input.form-control(type='text', name='name', id='name', placeholder='Name', autofocus, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='redirectUris') Redirect URIs
      .col-md-7
        input.form-control(type='text', name='redirectUris', id='redirectUris', placeholder='https://myapp.com/example, https://anotherapp.com/example', required)
    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-success(type='submit') Create client